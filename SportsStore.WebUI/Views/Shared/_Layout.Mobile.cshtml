<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <link href="https://cdn.bootcss.com/jquery-mobile/1.3.2/jquery.mobile.min.css" rel="stylesheet">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div data-role="page" id="page1">
        <div data-theme="a" data-role="header" data-position="fixed">
            <h3>运功商店</h3>
            @Html.Action("Menu", "Nav")
        </div>
        <div data-role="content">
            <div data-role="listview" data-divider-theme="b" data-inset="false">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.bootcss.com/jquery/1.9.1/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/jquery-mobile/1.3.2/jquery.mobile.min.js"></script>
</body>
</html>
