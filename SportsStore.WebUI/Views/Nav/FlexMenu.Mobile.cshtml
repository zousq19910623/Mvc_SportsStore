
@model IEnumerable<string>

<div data-role="navbar">
    <ul>
        <li>@Html.ActionLink("全部", "List", "Product", null, new { @class = "ui-btn-active" })</li>
        @foreach (var item in Model)
        {
            <li>
                 @Html.RouteLink(item, new
                 {
                     controller = "Product",
                     action = "List",
                     category = item,
                     page = 1
                 }, new
                 {
                     data_transition = "fade",
                     @class = (item == ViewBag.SelectedCategory ? " ui-btn-active" : "")
                 })
            </li>
          
        }
    </ul>
</div>

