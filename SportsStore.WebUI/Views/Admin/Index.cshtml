@model IEnumerable<SportsStore.Domain.Entities.Product>

@{
    ViewBag.Title = "管理员：所有商品";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>全部产品</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>名称</th>
                <th class="text-right">价格</th>
                <th class="text-center">操作</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <th class="text-right">@item.ProductID</th>
                    <th>@Html.ActionLink(item.Name, "Edit", new { item.ProductID })</th>
                    <th class="text-right">@item.Price.ToString("c")</th>
                    <th class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("ProductID",@item.ProductID)
                            <input type="submit" value="删除" class="btn btn-default btn-xs" />
                        }
                    </th>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer text-center">
        @Html.ActionLink("新增", "Create", null, new { @class="btn btn-default"})
    </div>
</div>

